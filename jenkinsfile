pipeline {
    agent {
        label "master"
    }
   
    stages {
        stage("clone code") {
            steps {
                script {
                    // Let's clone the source
                    git 'git@gitlab.com:oussama.mechlaoui/continuous-integration-project.git';
                }
            }
        }
        stage("mvn build") {
            steps {
                script {
                    sh "mvn package -DskipTests=true"
                }
            }
        }
        stage("mvn clean install ") {
            steps {
                script {
                    sh "mvn clean"
                }
            }
        }
         stage("mvn deploy ") {
            steps {
                script {
                    sh "mvn deploy"
                }
            }
        }
}
}